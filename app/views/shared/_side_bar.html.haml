/ ユーザー編集ページに遷移するためのパスを追加
.side-bar
  .header
    .header__box
      %h3.header__name
        = current_user.name
      %ul.header__lists
        %li.header__list
          = link_to new_group_path do
            = fa_icon 'edit', class: 'icon'
        %li.header__list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          %P.group__name
            = group.name
          %p.group__message
            no messages