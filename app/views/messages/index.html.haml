.flash-box 
  .notice
= render 'shared/side_bar'

.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        test
      %ul.main-header__left-box__member-list
        Member
        %li.main-header__left-box__member
          Daiki
    .main-header__edit-btn
      Edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker
          Daiki
        %p.message__upper-info__date
          2019/08/04(Sun) 22:14:35
      %p.message__text
        first text message

  .form
    = form_for [@group, @message], html:{class:'new-message'} do |f|
      .form__mask
        = f. text_field :text, class: 'form__message', placeholder:'type a message'
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'

      
