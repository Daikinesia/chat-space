.flash-box 
  .notice
    グループを作成しました。
.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        Daiki
    %ul.side-header__box__menu
      %li.side-header__box__menu__new-group
        =fa_icon 'edit', class:"new-group"
      %li.side-header__box__menu__edit-user
        =fa_icon 'cog', class:"edit-user"
  .groups
    .group
      %p.group__group-name
        test-group
      %p.group__latest-message 
        さようなら
    .group
      %p.group__group-name
        test-group2
      %p.group__latest-message 
        こんにちわ
    .group
      %p.group__group-name
        test-group3
      %p.group__latest-message 
        おはよう
.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        test
      %ul.main-header__left-box__member-list
        Member :&nbsp;
        %li.main-header__left-box__member
          Daiki
    .main-header__edit-btn
      Edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker
          Daiki
        %p.message__upper-info__date
          2019/08/04(Sun) 22:14:35
      %p.message__text
        first text message
  .form
    %form.new-message{action: '/index', method: 'post'}
      .input-box
        %input.input-box__text{name: "message[text]", placeholder: "type a message", type: "text"}
        %label.input-box__image{for: "message_image"}
          =fa_icon 'image'
          %input#message_image.input-box__image__file{type: "file", name: "message[image]"}
      %input.submit-btn{"data-disable-with" => "Send", name: "commit", type: "submit", value: "Send"}
  